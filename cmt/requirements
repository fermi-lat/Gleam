package Gleam

version  v2r2p12
# This is a checkout package
# $Id: requirements,v 1.149 2002/09/12 22:17:57 lsrea Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use EXTLIB      v2r4p3
use GaudiSys    v9r0p6

# ROOT add-on
use ROOT        v3r2p10
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy v4r6 
use facilities  v2r5
use xml         v4r1p4 
use xmlUtil     v2r8p1

use geometry    v3

use astro       v0r1p2

# low-level graphics

use gui         v3r3
use geomrep     v4r1

# the geometry data base
use idents      v2r8p4 
use detModel    v2r13
use xmlGeoDbs   v1r6p0

# interface to G4 - make private to avoid so many libs
private 
use Geant4      v1r1p0

public
# this is the minimal G4 runtime only stuff
use Geant4Runtime v1r0

# Gaudi component packages follow

use GuiSvc      v3r1p3

use Event               v9r1
use GlastSvc            v9r1

# simulation

use FluxSvc             v5r11
use FluxDisplay  v2r2
use G4Generator         v4r3p3

#digitization
use CalDigi              v1r2p5
use TkrDigi              v1r6
use AcdDigi              v1r4



#reconstruction
use Trigger             v3r3p4
use Recon               v2r3p3

use TkrRecon            v8r1
use CalRecon            v5r7p3 
use AcdRecon            v1r2p1       

#ROOT persistence: RootIo specifies the data packages
use RootIo              v4r13

#diagnostic and summary of bottom line
use merit               v5r9

### define a simple executable with GUI

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOpts "" WIN32 "*.txt *.h"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOpts) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

# define a standard test executable, if desired
apply_pattern package_test
