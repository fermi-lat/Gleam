package Gleam

version  v2r2p5
# This is a checkout package
# $Id: requirements,v 1.108 2002/07/19 16:02:08 burnett Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use EXTLIB      v2r4p3
use GaudiSys    v9r0p6

# ROOT add-on
use ROOT        v3r2p10
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy            v4r6 
use facilities  v2r4p1
use xml         v4r1p4 
use xmlUtil     v2r8p1

use geometry    v3

# low-level graphics

use gui         v3r2
use geomrep     v4r1

# the geometry data base
use idents      v2r8p2
use detModel    v2r12
use xmlGeoDbs   v1r5p3

# interface to G4 - make private to avoid so many libs
private 
use Geant4      v1r1p0

public
# Gaudi component packages follow

use GuiSvc                v3r1

use Event                 v8r13
use GlastSvc    v8r1p2

# simulation

use FluxSvc     v5r8
use FluxDisplay           v2r1
use G4Generator           v4r2

#digitization
use CalDigi               v1r1p2 
use TkrDigi               v1r4
use AcdDigi     v1r2



#reconstruction
use Trigger     v3r3p3
use Recon                 v2r3

use TkrRecon    v6r4p2
use CalRecon    v5r7p1  
use AcdRecon    v0r4p1       

#ROOT persistence: RootIo specifies the data packages
use RootIo      v4r8

#diagnostic and summary of bottom line
use merit       v5r6

### define a simple executable with GUI

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOpts "" WIN32 "*.txt *.h"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOpts) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

# define a standard test executable, if desired
apply_pattern package_test
