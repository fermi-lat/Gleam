package Gleam

version v1r1

# This is a checkout package
# $Id: requirements,v 1.30 2002/05/02 12:44:01 burnett Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use GaudiSys    v9r0p5

# ROOT add-on
use ROOT             v3r2p8
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy v4r3 
use facilities  v2r4 
use xml         v4r1p3 
use xmlUtil     v2r8p1

use geometry    v3

# low-level graphics

use gui         v3 
use geomrep     v4r1

# the geometry data base
use idents           v2r6 
use detModel    v2r10
use xmlGeoDbs   v1r4

# interface to G4
use Geant4           v1r1p0

# Gaudi component packages follow

use GuiSvc      v3
use GlastEvent       v7r2
use GlastSvc         v7r2

# simulation
use FluxSvc          v5r5
use G4Generator      v3r5

#digitization
use GlastDigi        v2r6

#reconstruction
use Recon            v1r2
use TkrRecon         v5r4
use CalRecon         v4       


#ROOT persistence
use mcRootData       v2r1
use RootIo           v1r0


### define a simple executable 

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOptions "" WIN32 "jobOptions.txt"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOptions) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

