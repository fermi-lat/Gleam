package Gleam

version  v2r0

# This is a checkout package
# $Id: requirements,v 1.43 2002/05/10 21:57:38 burnett Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use GaudiSys    v9r0p6

# ROOT add-on
use ROOT        v3r2p9
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy v4r3 
use facilities  v2r4p1
use xml         v4r1p3 
use xmlUtil     v2r8p1

use geometry    v3

# low-level graphics

use gui         v3r1 
use geomrep     v4r1

# the geometry data base
use idents      v2r6 
use detModel    v2r10
use xmlGeoDbs   v1r4

# interface to G4
use Geant4      v1r1p0

# Gaudi component packages follow

use GuiSvc      v3

use Event                v8r1
use GlastSvc             v8r0

# simulation

use FluxSvc              v5r6
use G4Generator          v4r0

#digitization
use GlastDigi            v3r0

#reconstruction
use Recon                v2r0
use TkrRecon             v6r0
use CalRecon             v5r0       


#ROOT persistence
use mcRootData  v2r1p1
use RootIo                v2r0


### define a simple executable 

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOptions "" WIN32 "jobOptions.txt"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOptions) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

