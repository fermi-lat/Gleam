package Gleam

version  v2r1p4
# This is a checkout package
# $Id: requirements,v 1.60 2002/05/23 21:09:19 burnett Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use GaudiSys    v9r0p6
#use GaudiAlg	v5r0p2

# ROOT add-on
use ROOT        v3r2p9
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy v4r4 
use facilities  v2r4p1
use xml         v4r1p3 
use xmlUtil     v2r8p1

use geometry    v3

# low-level graphics

use gui         v3r1 
use geomrep     v4r1

# the geometry data base
use idents      v2r8
use detModel    v2r10
use xmlGeoDbs   v1r4

# interface to G4
use Geant4      v1r1p0

# Gaudi component packages follow

use GuiSvc      v3

use Event       v8r5p1
use GlastSvc    v8r0

# simulation

use FluxSvc     v5r6p2
use FluxDisplay v2r0p1
use G4Generator v4r1p1

#digitization
use CalDigi     v1r0p1
use GlastDigi   v4r2
use AcdDigi     v0r1

#reconstruction
use Trigger              v3r2
use Recon       v2r2p1

use TkrRecon             v6r2p1
use CalRecon    v5r2       


#ROOT persistence
use mcRootData     v2r2
use digiRootData   v3r2
use reconRootData        v3r0p2

use RootIo               v4r1p1


### define a simple executable with GUI

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOpts "" WIN32 "*.txt"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOpts) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

