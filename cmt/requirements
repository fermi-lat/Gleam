package Gleam

version  v2r1p7
# This is a checkout package
# $Id: requirements,v 1.73 2002/06/05 21:47:14 burnett Exp $

# gaudi system files: this would checkout all of the Gaudi packages
use GaudiSys    v9r0p6

# ROOT add-on
use ROOT        v3r2p9
use RootHistCnv v5r0p1

# basic Glast packages

use XMLEXT      v2r2 
use GlastPolicy            v4r5 
use facilities  v2r4p1
use xml         v4r1p4 
use xmlUtil     v2r8p1

use geometry    v3

# low-level graphics

use gui         v3r1 
use geomrep     v4r1

# the geometry data base
use idents      v2r8
use detModel    v2r11
use xmlGeoDbs   v1r5p2

# interface to G4 - make private to avoid so many libs
private 
use Geant4      v1r1p0

public
# Gaudi component packages follow

use GuiSvc      v3

use Event                  v8r7p1
use GlastSvc    v8r1

# simulation

use FluxSvc                v5r7
use FluxDisplay v2r0p1
use G4Generator            v4r1p3

#digitization
use CalDigi     v1r0p1
use TkrDigi     v1r0
use AcdDigi                v1r0


#ROOT persistence
use mcRootData     v2r2
use digiRootData   v3r2
use reconRootData  v3r0p2

use RootIo                 v4r1p5


#reconstruction
use Trigger                v3r3
use Recon       v2r2p3

use TkrRecon               v6r3p3
use CalRecon               v5r5p2       


#diagnostic and summary of bottom line
use merit                  v5r3

### define a simple executable with GUI

set JOBOPTIONS "${GLEAMROOT}/src/jobOptions.txt"

macro jobOpts "" WIN32 "*.txt *.h"  
application Gleam $(GlastMain) $(Win32Resource) $(jobOpts) 

macro Gleamlinkopts  "  $(GuiSvc_lib) $(guiapp_linkopts) $(gui_linkopts) -u GuiSvc_loadRef  -ldl "\
      WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

# define a standard test executable, if desired
apply_pattern package_test
